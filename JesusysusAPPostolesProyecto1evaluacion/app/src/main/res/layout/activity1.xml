<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"

        android:orientation="vertical"
        android:padding="16dp"

        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="93dp">

        <TextView
            android:id="@+id/campoDeTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorBoton"
            android:maxLength="50"
            android:minHeight="48dp"
            android:text='"PlaceHolder"'
            android:textAlignment="center"
            android:textColor="@color/colorTexto"
            android:textColorHint="@color/colorTexto"
            android:textSize="24sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="4px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="4px"
                android:backgroundTint="@color/colorBoton"
                android:text="Conexion a Internet"
                android:textColor="@color/colorTexto"
                app:icon="@drawable/internet"
                app:iconGravity="textTop"
                app:iconTint="@color/colorIcono" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="4px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="4px"
                android:backgroundTint="@color/colorBoton"
                android:text="Sensores\n"
                android:textColor="@color/colorTexto"
                app:icon="@drawable/sensor"
                app:iconGravity="textTop"
                app:iconTint="@color/colorIcono" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="4px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="4px"
                android:backgroundTint="@color/colorBoton"
                android:text="Cámara\n"
                android:textColor="@color/colorTexto"
                app:icon="@drawable/camara"
                app:iconGravity="textTop"
                app:iconTint="@color/colorIcono" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="0px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="4px"
                android:layout_marginRight="16px"
                android:layout_marginBottom="4px"
                android:backgroundTint="@color/colorBoton"
                android:text="Galería\n"
                android:textColor="@color/colorTexto"
                app:icon="@drawable/galeria"
                app:iconGravity="textTop"
                app:iconTint="@color/colorIcono" />
        </GridLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>